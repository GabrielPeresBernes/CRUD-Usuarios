<html>
  <!-- <head> -->
    <%- include('../partials/head') %>
  <!-- </head> -->
  <body>
    <div class="column">
      <% if (users && users.length > 0) { %>
        <% users.map(user => { %>
          <div class="card">
            <div class="row">
              <div class="column justify-center flex-1">
                <div class="label">Nome</div>
                <div class="data"><%= user.name %></div>
                <div style="height: 18px"></div>
                <div class="label">Email</div>
                <div class="data"><%= user.email %></div>
              </div>
              <div class="column">
                <a class="button" href="/users/show/<%= user.id %>">
                  <i class="fas fa-eye"></i>
                </a>
                <div style="height: 8px"></div>
                <a class="button bg-secondary" href="/users/edit/<%=user.id%>">
                  <i class="fas fa-pen"></i>
                </a>
                <div style="height: 8px"></div>
                <form method="POST" action="/users/<%=user.id%>?_method=DELETE">
                  <button class="button bg-danger">
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
              </div>
            </div>
          </div>
          <div style="height: 12px"></div>
        <% }) %>
      <% } else { %>
        <h4 style="margin-left: auto; margin-right: auto;"> Nenhum usuÃ¡rio cadastrado </h4>
      <% } %>  
      <a class="fixed-button bg-success" href="/users/create">
        <i class="fas fa-plus"></i>
      </a>
    </div>
  </body>
</html>